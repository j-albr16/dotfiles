{
    "yaml.schemas": {
        "   kubernetes": "/*.yaml"
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "yaml",
        "json",
        "javascript",
        "nginx"
    ],
    "snippets.ultisnips.directories": [
        "UltiSnips,"
    ],
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "digestif": {
            "command": "digestif",
            "filetypes": [
                "tex",
                "plaintex",
                "context"
            ]
        }
    }
}
